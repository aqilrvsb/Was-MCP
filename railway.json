{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "docker/golang.Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "/app/whatsapp rest",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}